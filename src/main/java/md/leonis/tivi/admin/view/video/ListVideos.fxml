<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="md.leonis.tivi.admin.view.video.ListVideosController">
   <padding>
      <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
   </padding>
   <children>
      <GridPane minWidth="800.0" prefHeight="400.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints maxHeight="24.0" minHeight="0.0" prefHeight="24.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="32.0" prefHeight="32.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="32.0" prefHeight="152.0" vgrow="SOMETIMES" />
            <RowConstraints maxHeight="32.0" prefHeight="28.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints maxHeight="36.0" minHeight="10.0" prefHeight="36.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Все видео" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font></Label>
            <HBox alignment="CENTER" prefHeight="72.0" prefWidth="800.0" spacing="5.0" GridPane.rowIndex="1">
               <children>
                  <ComboBox fx:id="category" minWidth="350.0" visibleRowCount="16" />
                  <Button fx:id="categorySelectButton" mnemonicParsing="false" onAction="#selectCategory" text="Отобрать" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.rowIndex="2">
               <children>
                  <Label text="Количество на страницу:" />
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" selected="true" text="10">
                     <toggleGroup>
                        <ToggleGroup fx:id="countToggleGroup" />
                     </toggleGroup>
                  </ToggleButton>
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" text="25" toggleGroup="$countToggleGroup" />
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" text="50" toggleGroup="$countToggleGroup" />
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" text="100" toggleGroup="$countToggleGroup" />
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" text="250" toggleGroup="$countToggleGroup" />
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" text="500" toggleGroup="$countToggleGroup" />
                  <ToggleButton mnemonicParsing="false" onAction="#selectPageCount" text="1000" toggleGroup="$countToggleGroup" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.rowIndex="3">
               <children>
                  <Label text="Страница:" />
                  <HBox alignment="CENTER" prefHeight="100.0" spacing="5.0">
                     <children>
                        <ToggleButton mnemonicParsing="false" text="ToggleButton" />
                        <ToggleButton mnemonicParsing="false" text="ToggleButton" />
                        <ToggleButton mnemonicParsing="false" text="ToggleButton" />
                     </children>
                  </HBox>
               </children>
            </HBox>
            <HBox prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.rowIndex="4">
               <children>
                  <TableView minWidth="800.0" prefWidth="600.0">
                    <columns>
                      <TableColumn minWidth="45.0" prefWidth="45.0" text="ID" />
                      <TableColumn minWidth="190.0" prefWidth="195.0" text="Название / Категория" />
                        <TableColumn minWidth="120.0" prefWidth="120.0" text="Опубликовано" />
                        <TableColumn minWidth="100.0" prefWidth="100.0" text="Просмотров" />
                        <TableColumn minWidth="110.0" prefWidth="110.0" text="Комментарии" />
                        <TableColumn minWidth="150.0" prefWidth="150.0" text="Управление" />
                        <TableColumn minWidth="80.0" text="Отметить" />
                    </columns>
                  </TableView>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0" GridPane.rowIndex="5">
               <children>
                  <Label text="С отмеченными:" />
                  <ComboBox fx:id="operations" prefWidth="150.0" />
                  <Button fx:id="runBatchOperationButton" mnemonicParsing="false" onAction="#runBatchOperation" text="Выполнить" />
               </children>
            </HBox>
         </children>
      </GridPane>
   </children>
</VBox>
